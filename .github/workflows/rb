name: Build and Publish Gem to RubyGems

on:
  push:
    branches: [ main ]
    tags: ['v*.*.*']

permissions:
  contents: read

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: 3.1

      - name: Build gem
        run: gem build laicrypto.gemspec

      - name: Push gem to RubyGems
        env:
          RUBYGEMS_API_KEY: ${{ secrets.RUBYGEMS_API_KEY }}
        run: |
          VERSION=$(grep -Po '(?<=VERSION = ")[^"]*' lib/laicrypto/version.rb)
          gem push "laicrypto-${VERSION}.gem" --api-key $RUBYGEMS_API_KEY
